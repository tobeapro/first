        当前浏览器不支持Canvas，请更换浏览器后再试
    </canvas>
	<script>// JavaScript Document
var RADIUS=8;
var TOP=60;
var LEFT=30;
var timer=null;

window.onload=function (){
	var canvas=document.getElementById("canvas");
	var context=canvas.getContext("2d");
	canvas.width=1024;
	canvas.height=768;
	draw(context);
	timer=setInterval(function(){
		 draw(context)},1000);
	}

function draw(ele){
	var now=new Date();
	var month=now.getMonth()+1;
	var day=now.getDate();
	var hour=now.getHours();
	var minute=now.getMinutes();
	var second=now.getSeconds();
	var h1=Math.floor(hour/10);
	var h2=Math.floor(hour%10);
	var m1=Math.floor(minute/10);
	var m2=Math.floor(minute%10);
	var s1=Math.floor(second/10);
	var s2=Math.floor(second%10);
	ele.clearRect(0,0,1024,768);
	render(LEFT,TOP,h1,ele);
	render(LEFT+15*(RADIUS+1),TOP,h2,ele);
	render(LEFT+30*(RADIUS+1),TOP,10,ele);
	render(LEFT+39*(RADIUS+1),TOP,m1,ele);
	render(LEFT+54*(RADIUS+1),TOP,m2,ele);
	render(LEFT+69*(RADIUS+1),TOP,10,ele);
	render(LEFT+78*(RADIUS+1),TOP,s1,ele);
	render(LEFT+93*(RADIUS+1),TOP,s2,ele);
}
function render(x,y,num,cxt){	
	for(var i=0;i<digit[num].length;i++)
		for(var j=0;j<digit[num][i].length;j++)
			if(digit[num][i][j]==1){
			cxt.fillStyle=color[Math.floor(Math.random()*10)];
				cxt.beginPath()
				cxt.arc(x+2*j*(RADIUS+1)+RADIUS+1,y+2*i*(RADIUS+1)+RADIUS+1,RADIUS,0,2*Math.PI)
				cxt.closePath()
				cxt.fill()
				}
	}
</script>
<script>
color=["rgb(70,222,222)","rgb(30,200,100)","rgb(238,20,130)","rgb(43,35,94)","rgb(255,200,100)","rgb(64,195,129)","rgb(5,11,250)","rgb(100,250,100)","rgb(0,255,255)","rgb(255,195,0)"]
</script>
