<script type="text/javascript">
window.onload=function timeFun(){
  var time=new Date();
  var Y=time.getFullYear();
  var M=time.getMonth()+1;
  var D=time.getDate();
  var H=time.getHours();
  var ms=time.getMinutes();
  var S=time.getSeconds();
	if(S<10){ S="0"+S;};
 var now=Y+"年"+M+"月"+D+"日"+H+":"+ms+":"+S;
var timer=null;
clearTimeout(timer);
var div1=document.getElementById("div1");
div1.innerHTML=now;
timer=setTimeout(timeFun,1000);
}
</script>
<div id="div1"></div>
