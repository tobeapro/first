<style>
*{margin:0;padding:0;}
li{list-style: none;}
.focus{width:730px;height:454px;position:relative;margin:100px auto;overflow:hidden;}
.focus-pic li{position:absolute;opacity:0;}
.focus-page{position:absolute;bottom:20px;left:240px;}
.focus-page li{display:inline-block;width:30px;height:30px;border-radius:15px;text-align:center;line-height: 30px;background:#fff;}
.focus-left,.focus-right{position:absolute;bottom:200px;width:50px;height:30px;background:rgba(150,150,150,0.2);text-align:center;line-height:30px;font-weight:bolder;}
.focus-left:hover,.focus-right:hover{background:rgba(150,150,150,0.7)}
</style>
<script src="http://libs.baidu.com/jquery/2.0.0/jquery.js"></script>
<script>
	$(document).ready(function(){
		var num=0;
		$(".focus-page li").mouseover(function (){
			var index=$(this).index();
			for(var i=0;i<6;i++){
				if(i==index){
					$(".focus-page li").eq(i).css("background","red")
					$(".focus-pic li").eq(i).animate({"opacity":1},200); 
					num=index;
				}else{
					$(".focus-page li").eq(i).css("background","#fff")
					$(".focus-pic li").eq(i).css("opacity",0);
					num=index;
				}
			}
		})
		$(".focus-left").click(function(){
			if(num==0){num=5}
				else{num--}
			for(var i=0;i<6;i++){
				if(i==num){
				$(".focus-page li").eq(num).css("background","red")
				$(".focus-pic li").eq(num).animate({"opacity":1},200); 
			}else{
					$(".focus-page li").eq(i).css("background","#fff")
					$(".focus-pic li").eq(i).css("opacity",0);
				}
			}	
		})
		$(".focus-right").click(function(){
			if(num==5){num=0}
				else{num++}
			for(var i=0;i<6;i++){
				if(i==num){
				$(".focus-page li").eq(num).css("background","red")
				$(".focus-pic li").eq(num).animate({"opacity":1},200); 
			}else{
					$(".focus-page li").eq(i).css("background","#fff")
					$(".focus-pic li").eq(i).css("opacity",0);
				}
			}	
		})


	})
</script>
